pipeline {
    agent any
    tools {nodejs "Node-Build"}
    stages {
        stage('Installing dependancies') {
            steps {
                echo 'Installing jasmine'
                script {
                    sh 'npm install --save-dev jasmine'
                }
            }
        }
        stage('Testng nodejs') {
            steps {
                echo 'Running npm tests'
                script {
                    sh 'npm test'
                }
            }
        }
    }
}

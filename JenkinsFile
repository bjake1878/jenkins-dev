pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                def response = httpRequest 'http://bjhnsan.bjhn:3888'
                    println("Status: "+response.status)
                    if (response.content == 'HelloWorld!') {
                        println("Content: "+response.content)
                    } else {
                        println("Failed")
                    }
        
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}

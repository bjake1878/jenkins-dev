pipeline {
    agent any
    tools {nodejs "Node-Build"}

    stages {
        stage('Cloning') {
            steps {
                echo 'Building..'
            }
        }
        stage('Dependancies') {
            steps {
                echo 'Installing..'
                script {
                    sh 'npm install --save-dev jasmine'
                }
            }
        }
        stage('Testng') {
            steps {
                echo 'Testing....'
                script {
                    sh 'npm test'
                }
            }
        }
    }
}
